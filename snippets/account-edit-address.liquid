<ul role="list">
  {% unless customer.addresses.size > 0 %}
  <p class=" font-sofia-pro text-sm">No addresses found. Please edit your details below</p>
  {% endunless %}
    {%- for address in customer.addresses -%}
      <li data-address>
        {%- if address == customer.default_address -%}

        <div  class=" flex flex-col justify-center sm:w-3/5 lg:w-1/2 xl:w-full m-auto" id="EditAddress_{{ address.id }}">
          <!-- <h2>{{ 'customer.addresses.edit_address' | t }}</h2> -->
          {%- form 'customer_address', address -%}
            <div class="field mb-3 flex flex-col-reverse sm:flex-row-reverse justify-center items-center max-w-lg xl:justify-end">
              <input class="sm:ml-3 py-2 pl-2 font-sofia-pro text-xs rounded-md border border-black w-full sm:w-1/2" type="text" id="AddressFirstName_{{ form.id }}" name="address[name]" value="{{ form.first_name }} {{ form.last_name }}" autocomplete="given-name" placeholder="{{ 'customer.addresses.first_name' | t }}">
              <label class="font-sofia-pro-regular mb-2 sm:mb-0 w-full sm:w-1/2 flex sm:justify-end text-left sm:text-right text-sm " for="AddressFirstName_{{ form.id }}">{{ 'customer.addresses.name' | t }}</label>
            </div>
            <div class="field mb-3 flex flex-col-reverse sm:flex-row-reverse justify-center items-center max-w-lg xl:justify-end">
                <input class="sm:ml-3 py-2 pl-2 font-sofia-pro text-xs rounded-md border border-black w-full sm:w-1/2" type="tel" id="AddressPhone_{{ form.id }}"  name="address[phone]" value="{{ form.phone }}" autocomplete="tel">
                <label class="font-sofia-pro-regular mb-2 sm:mb-0 w-full sm:w-1/2 flex sm:justify-end text-left sm:text-right text-sm " for="AddressPhone_{{ form.id }}">{{ 'customer.addresses.phone' | t }}</label>
              </div>
            <div class="field mb-3 flex flex-col-reverse sm:flex-row-reverse justify-center items-center max-w-lg xl:justify-end">
                <input class="sm:ml-3 py-2 pl-2 font-sofia-pro text-xs rounded-md border border-black w-full sm:w-1/2" type="text" id="AddressZip_{{ form.id }}" name="address[zip]" value="{{ form.zip }}" autocapitalize="characters" autocomplete="postal-code" placeholder="{{ 'customer.addresses.zip' | t }}">
                <label class="font-sofia-pro-regular mb-2 sm:mb-0 w-full sm:w-1/2 flex sm:justify-end text-left sm:text-right text-sm " for="AddressZip_{{ form.id }}">{{ 'customer.addresses.zip' | t }}</label>
              </div>
            <div class="field mb-3 flex flex-col sm:flex-row justify-center items-center max-w-lg xl:justify-end">
              <label class="font-sofia-pro-regular mb-2 mr-3 sm:mb-0 w-full pl-2 sm:pl-0 sm:w-1/2 flex sm:justify-end text-left sm:text-right text-sm " for="AddressCountry_{{ form.id }}">
                {{ 'customer.addresses.country' | t }}
              </label>
              <div class="select w-full sm:w-1/2 flex justify-start">
                <select
                  class="country_selector py-2 pl-2 font-sofia-pro border-black text-xs rounded-md border w-full bg-selectDropDownAccountMenu bg-right-95% bg-no-repeat"
                  id="AddressCountry_{{ form.id }}"
                  name="address[country]"
                  data-address-country-select
                  data-default="{{ address.country }}"
                  data-form-id="{{ form.id }}"
                  autocomplete="country"
                >
                  {{ all_country_option_tags }}
                </select>
              </div>
            </div>
            <div id="AddressProvinceContainer_{{ form.id }}" style="display:none;">
              <label class="font-sofia-pro-regular mb-2 sm:mb-0 text-sm " for="AddressProvince_{{ form.id }}">
                {{ 'customer.addresses.province' | t }}
              </label>
              <div class="select">
                <select
                  class="sm:ml-3 py-1 font-sofia-pro text-xs rounded-md border"
                  id="AddressProvince_{{ form.id }}"
                  name="address[province]"
                  data-default="{{ form.province }}"
                  autocomplete="address-level1"
                >
                </select>
              </div>
            </div>
            <div class="flex justify-center xl:justify-start mt-6 sm:ml-50">
              <button class="transition-all duration-150 font-sofia-pro-regular bg-primary-blue border uppercase pb-2 pt-3 px-7 tracking-wider text-white text-xs rounded-md">{{ 'customer.addresses.update' | t }}</button>
            </div>
          {%- endform -%}
        </div>
      </li>
      {% endif %}
    {%- endfor -%}
  </ul>
